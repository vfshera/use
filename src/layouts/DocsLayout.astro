---
export interface Props {
    title: string;
}

const { title } = Astro.props;

import "@/styles.css";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <main class="h-full flex flex-col fixed w-full">
            <header class="p-5 border-b border-slate-300 shadow-sm">
                <a href="/" class="fonnt-semibold">Home</a>
            </header>
            <div class="grid grid-cols-[20%_1fr] flex-1">
                <aside class="border-r border-slate-300 p-5 overflow-y-auto">
                </aside>
                <slot />
            </div>
        </main>
    </body>
</html>
