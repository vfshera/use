---
import DocsLayout from "@/layouts/DocsLayout.astro";
import { getCollection } from "astro:content";
export async function getStaticPaths() {
    const docs = await getCollection("docs");
    return docs.map((doc) => ({
        params: { slug: doc.slug },
        props: { doc },
    }));
}
const { doc } = Astro.props;

const { Content } = await doc.render();
---

<DocsLayout title={`Youi - ${doc.data.title}`}>
    <section class="grid grid-cols-[1fr_25%]">
        <article
            class="flex flex-col items-center px-5 py-8 max-w-7xl sm:px-6 lg:px-8 prose"
        >
            <div
                class="flex flex-col w-full max-w-3xl prose text-left prose-blue"
            >
                <div class="w-full mx-auto overflow-y-auto">
                    <h1>{doc.data.title}</h1>

                    <Content />
                </div>
            </div>
        </article>

        <aside
            class="flex flex-col px-5 py-8 sm:pr-6 lg:pr-8 prose border-l border-slate-50"
        >
            <h4>On this page</h4>

            <ul class="flex flex-col gap-4 p-0 overflow-y-auto">
                {
                    Array.from({ length: 7 }, (v, i) => i + 1).map((v) => (
                        <li class="list-none m-0">
                            <a
                                href="/#"
                                class="block m-0 before:content-['#'] before:text-[70%] no-underline hover:underline hover:text-blue-700"
                            >
                                Topic {v}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </aside>
    </section>
</DocsLayout>
